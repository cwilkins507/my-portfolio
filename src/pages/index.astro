---
import Layout from '../layouts/Layout.astro';
import ArticleList from '../components/Articles';
import AnimatedHero from '../components/AnimatedHero';
import CaseStudyCard from '../components/CaseStudyCard';

const articlesRaw = await Astro.glob('../articles/*.md');
const articles = articlesRaw.map(article => ({
  slug: article.file.split('/').pop().replace('.md', ''),
  ...article.frontmatter,
})).sort((a, b) => new Date(b.date).getTime() - new Date(a.date).getTime());

const websiteSchema = {
  "@context": "https://schema.org",
  "@type": "WebSite",
  "name": "Collin Wilkins",
  "url": "https://collinwilkins.com",
  "description": "Technical articles on Python automation, AWS serverless architecture, AI integration, and building systems that deliver measurable business value.",
  "author": {
    "@type": "Person",
    "name": "Collin Wilkins",
    "url": "https://collinwilkins.com/about"
  }
};
---

<Layout
  title="Collin Wilkins | Lead Engineer & AI Automation Consultant"
  description="I build automations that turn $2M problems into solved problems. Lead Engineer with 8+ years in Python, AWS, and AI integration. Ex-Ford, Morningstar."
  schema={websiteSchema}
>
	<!-- Hero Section -->
	<AnimatedHero
		headline="I build automations that turn $2M problems into solved problems."
		subheadline="Lead Engineer | 8+ Years | Python, Java, AWS, AI Integration"
		subtext="Ex-Ford, Morningstar"
		ctas={[
			{ href: '/quiz', text: 'Get Your AI Plan', variant: 'primary' },
			{ href: '#work', text: 'See My Work', variant: 'secondary' }
		]}
		client:load
	/>

	<!-- Case Studies Section -->
	<section id="work" class="py-16 bg-zinc-950/50">
		<div class="max-w-6xl mx-auto px-4">
			<h2 class="text-3xl md:text-4xl font-display font-bold text-white mb-8">Recent Work</h2>
			<div class="grid md:grid-cols-2 gap-6">
				<CaseStudyCard
					title="Remote Dealership Inventory Audit"
					metric={{
						type: 'counter',
						value: 5,
						prefix: '$',
						suffix: 'M saved'
					}}
					description="IoT telemetry for 450K+ vehicles at Ford Credit"
					featured={true}
					client:load
				/>
				<CaseStudyCard
					title="Compliance Engine Modernization"
					metric={{
						type: 'counter',
						value: 90,
						prefix: '',
						suffix: '% reduction'
					}}
					description="Event-driven architecture at Morningstar"
					client:load
				/>
				<CaseStudyCard
					title="Stolen Vehicle Services"
					metric={{
						type: 'text',
						value: '2024',
						prefix: '',
						suffix: ' Launch'
					}}
					description="Real-time theft recovery for Ford F-150"
					client:load
				/>
			</div>
			<div class="mt-6 text-center">
				<a href="/about" class="text-teal-400 hover:text-teal-300 transition-colors font-medium">View full case studies →</a>
			</div>
		</div>
	</section>

	<!-- Quiz CTA Section -->
	<section class="py-20 bg-black">
		<div class="max-w-4xl mx-auto px-4 text-center">
			<h2 class="text-4xl md:text-5xl font-serif font-bold text-white mb-6">
				Not sure which automation fits your business?
			</h2>
			<p class="text-xl text-zinc-400 mb-8">
				Take our 2-minute quiz and get a personalized AI action plan delivered to your inbox.
			</p>
			<a href="/quiz" class="inline-block bg-white text-black hover:bg-zinc-200 px-10 py-5 rounded-full font-bold text-lg shadow-xl transition-all transform hover:scale-105">
				Take the Quiz →
			</a>
		</div>
	</section>

	<!-- Articles Section -->
	<section id="articles">
		<ArticleList articles={articles} client:load />
		<!-- Server-rendered article links for SEO crawlers -->
		<noscript>
			<div class="container mx-auto px-4 py-16">
				<h2 class="text-2xl font-serif font-bold text-white mb-8">All Articles</h2>
				<ul class="space-y-4">
					{articles.map(article => (
						<li>
							<a href={`/articles/${article.slug}`} class="text-teal-400 hover:text-teal-300 text-lg">
								{article.title}
							</a>
							<p class="text-zinc-500 text-sm">{article.date}</p>
						</li>
					))}
				</ul>
			</div>
		</noscript>
	</section>
</Layout>
