<script>
  // Plausible tracking for prompt toolkit page
  if (typeof window !== 'undefined' && window.plausible) {
    window.plausible('pageview', { props: { resource: 'AI Prompt Toolkit' } });
  }

  // Prompt search/filter
  (function () {
    var CATEGORY_IDS = ['automation', 'market-research', 'personas', 'competitors', 'seo', 'website', 'marketing'];

    var searchInput = document.getElementById('prompt-search');
    var searchCount = document.getElementById('prompt-search-count');
    var searchClear = document.getElementById('prompt-search-clear');
    if (!searchInput) return;

    // Build section → prompt map using data-prompt attributes
    var sections = [];
    var TOTAL_PROMPTS = 0;
    CATEGORY_IDS.forEach(function (id) {
      var el = document.getElementById(id);
      if (!el) return;
      var prompts = Array.from(el.querySelectorAll('[data-prompt]'));
      TOTAL_PROMPTS += prompts.length;
      sections.push({ el: el, id: id, prompts: prompts });
    });

    // Create "no results" message and insert before first section
    var noResults = document.createElement('div');
    noResults.className = 'container mx-auto px-4 py-16 text-center hidden';
    noResults.id = 'no-results';
    noResults.setAttribute('aria-live', 'polite');
    var noResultsP = document.createElement('p');
    noResultsP.className = 'text-lg text-[var(--color-text-secondary)]';
    noResultsP.textContent = 'No prompts match your search.';
    noResults.appendChild(noResultsP);
    var firstSection = document.getElementById(CATEGORY_IDS[0]);
    if (firstSection) firstSection.parentNode.insertBefore(noResults, firstSection);

    function setLinkDisabled(link, disabled) {
      if (disabled) {
        link.classList.add('opacity-40', 'pointer-events-none');
        link.setAttribute('aria-disabled', 'true');
        link.setAttribute('tabindex', '-1');
      } else {
        link.classList.remove('opacity-40', 'pointer-events-none');
        link.removeAttribute('aria-disabled');
        link.removeAttribute('tabindex');
      }
    }

    function doSearch() {
      var query = searchInput.value.trim().toLowerCase();
      var hasQuery = query.length > 0;

      searchClear.classList.toggle('hidden', !hasQuery);

      if (!hasQuery) {
        // Restore everything
        sections.forEach(function (s) {
          s.el.classList.remove('hidden');
          s.prompts.forEach(function (p) { p.classList.remove('hidden'); });
        });
        searchCount.classList.add('hidden');
        noResults.classList.add('hidden');
        // Reset category link counts and state
        CATEGORY_IDS.forEach(function (id) {
          var link = document.querySelector('[data-category-link="' + id + '"]');
          if (link) {
            setLinkDisabled(link, false);
            var countSpan = link.querySelector('[data-category-count]');
            var section = sections.find(function (s) { return s.id === id; });
            if (countSpan && section) countSpan.textContent = '(' + section.prompts.length + ')';
          }
        });
        return;
      }

      var totalVisible = 0;

      sections.forEach(function (s) {
        var sectionVisible = 0;
        s.prompts.forEach(function (p) {
          var text = p.textContent.toLowerCase();
          var match = text.indexOf(query) !== -1;
          p.classList.toggle('hidden', !match);
          if (match) sectionVisible++;
        });

        s.el.classList.toggle('hidden', sectionVisible === 0);
        totalVisible += sectionVisible;

        // Update category link count and disabled state
        var link = document.querySelector('[data-category-link="' + s.id + '"]');
        if (link) {
          var countSpan = link.querySelector('[data-category-count]');
          if (countSpan) countSpan.textContent = '(' + sectionVisible + ')';
          setLinkDisabled(link, sectionVisible === 0);
        }
      });

      searchCount.textContent = totalVisible + ' of ' + TOTAL_PROMPTS;
      searchCount.classList.remove('hidden');
      noResults.classList.toggle('hidden', totalVisible > 0);
    }

    searchInput.addEventListener('input', doSearch);

    searchClear.addEventListener('click', function () {
      searchInput.value = '';
      doSearch();
      searchInput.focus();
    });
  })();
</script>
