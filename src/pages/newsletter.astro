---
import Layout from '../layouts/Layout.astro';
import NewsletterSignup from '../components/NewsletterSignup.astro';
---

<Layout title="Newsletter | Collin Wilkins" description="Bi-weekly emails on automation, AI, and building systems that run without you. Practical insights from an enterprise engineer — no fluff.">
	<main class="max-w-[960px] mx-auto px-6 pt-32 pb-20">
		<div class="max-w-2xl mx-auto text-center mb-12">
			<h1 class="text-4xl md:text-5xl font-serif font-bold text-[var(--color-text-primary)] mb-4">Newsletter</h1>
			<p class="text-lg text-moonlight-text-secondary leading-relaxed">
				Bi-weekly emails on automation, AI, and building systems that run without you. Practical insights from an enterprise engineer — no fluff.
			</p>
		</div>

		<div class="max-w-xl mx-auto">
			<NewsletterSignup variant="inline" />
		</div>

		<div class="text-center mt-12">
			<a
				href="https://buttondown.com/collinwilkins/archive/"
				target="_blank"
				rel="noopener noreferrer"
				class="text-sm text-moonlight-text-muted hover:text-[var(--color-accent)] underline underline-offset-4 decoration-transparent hover:decoration-[var(--color-accent)] transition-all duration-300"
			>
				Read past issues →
			</a>
		</div>
	</main>
</Layout>
