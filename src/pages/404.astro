---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Page Not Found | Collin Wilkins" description="The page you're looking for doesn't exist.">
	<script is:inline>
		// Redirect mixed-case URLs to lowercase (GitHub Pages is case-sensitive)
		(function() {
			var path = window.location.pathname;
			var lower = path.toLowerCase();
			if (path !== lower) {
				window.location.replace(lower + window.location.search + window.location.hash);
			}
		})();
	</script>

	<div class="container mx-auto px-4 py-24 text-center">
		<h1 class="text-5xl font-bold text-white mb-6">404</h1>
		<p class="text-xl text-gray-400 mb-8">The page you're looking for doesn't exist.</p>
		<a href="/" class="inline-block px-6 py-3 bg-teal-500 text-white rounded-full hover:bg-teal-400 transition-all duration-300 font-bold shadow-xl">
			Back to Home
		</a>
	</div>
</Layout>
